<script> 
document.onkeydown=function(event){
            var e = event || window.event || arguments.callee.caller.arguments[0];
            if(e && e.keyCode==27){ // 按 Esc 
                //要做的事情
              }
            if(e && e.keyCode==113){ // 按 F2 
                 //要做的事情
               }            
             if(e && e.keyCode==13){ // enter 键
                 //要做的事情
                 loginFunc();
            }
        };
var loginFlag=false;
var loginFunc=function () {
url="/checkUser";
data={}; 
data["user"]=$("#user").val();
data["pwd"]=hex_md5($("#pwd").val());
$.ajax({
			url:url,
			data:data,
			type:"GET",
			dataType:"json",
			cache:false,
			success:function(data){				
                    if(data["permission"] && data["permission"]!="0")
                    {
                        setCookie("loginName",data["loginName"]);
                    document.write('<script>window.location.href="mainPage.html"<\/script>');
                
                    }
                    else
                        alert("登陆失败,请输入正确的用户名密码!");
            },
            error:function(data)
            {
                //alert(data);
            }
});
};
   function next(el) {
        while (el.nextSibling) {
            if (el.nextSibling.nodeType == 1) {
                return el.nextSibling;
            }
            el = el.nextSibling;
        }
        return null;
    }

$("#langset").click(function(event){
            event = event || window.event;
            var t = event.target || event.srcElement;
            if (t.id=="english") {
            		$("#chinese").attr("class","nosele");	
            		$("#english").attr("class","nosele sele");	
            		setCookie("langset","english");
            }
            else
            {
   					$("#chinese").attr("class","nosele sele");	
            		$("#english").attr("class","nosele");	
          			setCookie("langset","chinese");
            }
            


});
$(document).ready(function () {
$("#login").click(loginFunc);
});
</script>
